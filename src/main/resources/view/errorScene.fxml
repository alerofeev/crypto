<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:id="mainScene"
      fx:controller="com.kodokushi.controller.ErrorSceneController" stylesheets="@../styles/main.css" styleClass="scene"
      spacing="10.0">
  <padding>
    <Insets top="20.0" right="10.0" left="10.0" />
  </padding>
  <VBox alignment="CENTER_LEFT">
    <Label text="Похоже, Вы допустили ошибку при заполнении од-" />
    <Label text="ного или нескольких полей. Для получения подроб-" />
    <Label text="ной информации о причинах их возникновения, Вы" />
    <Label text="можете перейти в раздел Справка." />
  </VBox>
  <HBox alignment="CENTER">
    <padding>
      <Insets bottom="10" />
    </padding>
    <Button fx:id="manualButton" styleClass="manual-button" text="Справка" />
    <Pane HBox.hgrow="ALWAYS" />
    <Button fx:id="closeButton" prefHeight="25.0" minWidth="74.0" text="Продолжить..." />
  </HBox>
</VBox>